<div class="container">
    <form action="/api/editUser" method="POST">  
          <div class="mb-3">
            <label for="fullname" class="form-label">Fullname</label>
            <input
              type="text"
              class="form-control"
              id="fullname"
              name="fullname"
              value="<%= data.user.fullname %>"
              required
            />
          </div>
          <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input
              type="text"
              class="form-control"
              id="address"
              name="address"
              value="<%= data.user.address %>"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="text"
              class="form-control"
              id="email"
              name="email"
              value="<%= data.user.email %>"
              required
            />
          </div>
          <div class="mb-3">
            <label for="sex" class="form-label">Sex</label>
            <input
              type="text"
              class="form-control"
              id="sex"
              name="sex"
              value="<%= data.user.sex %>"
              required
            />
          </div>
          <input type="hidden" name="usernameEdit" value="<%= data.user.username %>" />
          <button type="submit">Submit</button>
    </form>
</div>