<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>STT</th>
                <th>User Name</th>
                <th>Full Name</th>
                <th>Address</th>
                <th>Setting</th>
            </tr>
        </thead>
        <tbody>
            <% data.rows.forEach(function(user, index) { %>
                <tr>
                    <td><%= index+1 %></td>
                    <td><%= user.username %></td>
                    <td><%= user.fullname %></td>
                    <td><%= user.address %></td>
                    <td>
                        <a href="/user/edit/<%= user.username %>">Sửa</a>
                        <form action="/api/deleteUser" method="POST" class="d-inline-block">
                            <input type="hidden" name="username" value="<%= user.username %>" />
                            <button type="submit">Xóa</button>
                        </form>
                        <a href="/user/view/<%= user.username %>">Xem</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>